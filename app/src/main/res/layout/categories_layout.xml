<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/bb"

        android:layout_width="match_parent"

        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:elevation="0dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cc"

            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="#4b4c4f"
            android:elevation="5dp">

            <View
                android:id="@+id/color"

                android:layout_width="15dp"
                android:layout_height="match_parent"

                android:background="@color/Health"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_margin="10dp"

                android:src="@drawable/health_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/color"

                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"

                android:layout_marginTop="1dp"
                android:fontFamily="@font/tai_heritage_pro_bold"

                android:text="Health"
                android:textColor="@color/white"

                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@id/icon"

                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/money_transactions"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="15dp"

                android:fontFamily="@font/tai_heritage_pro_bold"
                android:text="123 456 zÅ‚ in 5 transactions"

                android:textColor="@color/white"

                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toBottomOf="@id/name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>