<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/bb"

        android:elevation="0dp"

        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_margin="10dp"

        app:cardCornerRadius="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cc"

            android:elevation="5dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4b4c4f">

            <View
                android:id="@+id/color"

                android:layout_width="15dp"
                android:layout_height="match_parent"

                android:background="@color/Health"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/icon"

                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/health_icon"

                app:layout_constraintStart_toEndOf="@id/color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health"

                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="15dp"

                android:textSize="24sp"
                android:textColor="@color/white"

                android:fontFamily="@font/tai_heritage_pro_bold"/>

            <TextView
                android:id="@+id/money_transactions"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="123 456 zÅ‚ in 5 transactions"

                android:textColor="@color/white"
                android:fontFamily="@font/tai_heritage_pro_bold"

                android:layout_marginHorizontal="15dp"

                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toEndOf="@id/icon"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>