<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/light_blue_gradient"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:src="@drawable/logo_white"

            android:layout_width="75dp"
            android:layout_height="75dp"

            android:contentDescription="@string/app_name"

            android:layout_marginStart="25dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/settings"
            android:contentDescription="@string/settings_button"

            android:layout_width="36dp"
            android:layout_height="36dp"

            android:background="#00000000"
            android:scaleType="fitCenter"


            android:src="@drawable/settings_icon"

            android:layout_marginEnd="25dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/main_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        >

        <View
            android:id="@+id/filter_line"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/white"
            android:layout_margin="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_line"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/period_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="25dp"

                android:fontFamily="@font/tai_heritage_pro_bold"

                android:textSize="30sp"
                android:textColor="@color/white"

                android:text="This month"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/filter_line" />

            <!-->Earned<-->
            <TextView
                android:id="@+id/earned_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/earned_msg"

                android:textSize="16sp"

                android:textColor="@color/white"

                android:fontFamily="@font/tai_heritage_pro_bold"

                android:layout_marginHorizontal="20dp"

                app:layout_constraintTop_toBottomOf="@id/period_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/spent_text"/>
            <TextView
                android:id="@+id/earned_num"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxWidth="115dp"
                android:maxLines="1"

                android:text="@string/placeholder_for_money"
                android:textColor="#009f33"

                android:fontFamily="@font/tai_heritage_pro_bold"

                android:textSize="24sp"

                app:layout_constraintStart_toStartOf="@id/earned_text"
                app:layout_constraintEnd_toEndOf="@id/earned_text"
                app:layout_constraintTop_toBottomOf="@id/earned_text"
                />
            <!-->Spent<-->
            <TextView
                android:id="@+id/spent_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/spent_msg"

                android:textSize="16sp"

                android:textColor="@color/white"

                android:fontFamily="@font/tai_heritage_pro_bold"

                android:layout_marginHorizontal="20dp"

                app:layout_constraintTop_toBottomOf="@id/period_text"
                app:layout_constraintStart_toEndOf="@id/earned_text"
                app:layout_constraintEnd_toStartOf="@id/balance_text"/>
            <TextView
                android:id="@+id/spent_num"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxWidth="115dp"
                android:maxLines="1"

                android:text="@string/placeholder_for_money"
                android:textColor="#ee2121"

                android:fontFamily="@font/tai_heritage_pro_bold"

                android:textSize="24sp"

                app:layout_constraintStart_toStartOf="@id/spent_text"
                app:layout_constraintEnd_toEndOf="@id/spent_text"
                app:layout_constraintTop_toBottomOf="@id/spent_text"
                />
            <!-->Balance<-->
            <TextView
                android:id="@+id/balance_text"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/balance_msg"

                android:textSize="16sp"

                android:textColor="@color/white"

                android:fontFamily="@font/tai_heritage_pro_bold"

                android:layout_marginHorizontal="20dp"

                app:layout_constraintTop_toBottomOf="@id/period_text"
                app:layout_constraintStart_toEndOf="@id/spent_text"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/balance_num"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxWidth="115dp"
                android:maxLines="1"

                android:text="@string/placeholder_for_money"
                android:textColor="#ffcc66"

                android:fontFamily="@font/tai_heritage_pro_bold"

                android:textSize="24sp"

                app:layout_constraintStart_toStartOf="@id/balance_text"
                app:layout_constraintEnd_toEndOf="@id/balance_text"
                app:layout_constraintTop_toBottomOf="@id/balance_text"
                />

            <RelativeLayout
                android:id="@+id/amazing_chart"
                android:layout_height="100dp"
                android:layout_width="0dp"

                app:layout_constraintWidth_max="600dp"

                android:layout_margin="20dp"

                android:background="@drawable/stacked_bar_style"

                app:layout_constraintTop_toBottomOf="@+id/spent_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"

                    android:text="Amazing stack-bar chart"

                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/tai_heritage_pro_bold"
                    />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categories"

                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"

                android:layout_marginTop="20dp"

                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amazing_chart"
                app:layout_constraintWidth_max="600dp">

            </androidx.recyclerview.widget.RecyclerView>

            <!--<ImageButton
                android:layout_width="0dp"
                android:layout_height="60dp"

                app:layout_constraintWidth_max="600dp"

                android:layout_margin="20dp"
                android:background="@drawable/add_button"

                app:layout_constraintTop_toBottomOf="@id/categories"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
               -->
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"

        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:paddingTop="5dp"

        android:background="#131313"

        android:elevation="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-->Bottom Bar<-->
        <!-->Home Button<-->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:scaleType="fitCenter"

            android:src="@drawable/home_icon_blue"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/investments_button"
            app:layout_constraintVertical_bias="0.2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/nunito_extrabold"
            android:text="Home"

            android:textColor="#45AFFF"

            android:textSize="11sp"

            app:layout_constraintEnd_toEndOf="@+id/home_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/home_button"
            app:layout_constraintTop_toBottomOf="@+id/home_button" />

        <!-->Investments Button<-->
        <ImageButton
            android:id="@+id/investments_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00000000"
            android:scaleType="fitCenter"


            android:layout_marginHorizontal="25dp"

            android:src="@drawable/investments_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/subscriptions_button"
            app:layout_constraintVertical_bias="0.2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/nunito_extrabold"
            android:text="Invest"

            android:textColor="@color/white"

            android:textSize="11sp"

            app:layout_constraintEnd_toEndOf="@+id/investments_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/investments_button"
            app:layout_constraintTop_toBottomOf="@+id/investments_button" />

        <!-->Subscriptions Button<-->
        <ImageButton
            android:id="@+id/subscriptions_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginHorizontal="25dp"


            android:background="#00000000"

            android:scaleType="fitCenter"
            android:src="@drawable/subscriptions_icon_white"

            app:layout_constraintEnd_toStartOf="@+id/history_button"
            app:layout_constraintStart_toEndOf="@+id/investments_button"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/nunito_extrabold"
            android:text="Subscriptions"

            android:textColor="@color/white"

            android:textSize="11sp"

            app:layout_constraintEnd_toEndOf="@+id/subscriptions_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/subscriptions_button"
            app:layout_constraintTop_toBottomOf="@+id/subscriptions_button" />

        <!-->Transaction History Button<-->
        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="25dp"


            android:layout_marginStart="28dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/history_icon_white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/subscriptions_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/nunito_extrabold"
            android:text="History"

            android:textColor="@color/white"

            android:textSize="11sp"

            app:layout_constraintEnd_toEndOf="@+id/history_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/history_button"
            app:layout_constraintTop_toBottomOf="@+id/history_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>